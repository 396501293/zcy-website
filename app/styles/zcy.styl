.zcy
  &.main
    section
      .page_container
        position: relative
        background: rgba(255,255,255,0.33)
        width: 672px
        height: 146px
        display: table
        div
          font-size: 26px
          text-align: center
          display: table-cell
          vertical-align: middle
      .positionRD
        top: 100%
        left: 100%
        margin-top: -250px
        margin-left: -720px
      .positionC
        top: 50%
        margin: 0 auto
        margin-top: -100px
@media screen and (max-width:1280px)
  .zcy
    section
      &.page1
        background-image: url(../img/zcy-scroll-img1.png)
      &.page2
        background-image: url(../img/zcy-scroll-img2.png)
      &.page3
        background-image: url(../img/zcy-scroll-img3.png)
      &.page4
        background-image: url(../img/zcy-scroll-img4.png)
  .index
    background-image: url(../img/index-background_1280_730.png)
@media screen and (min-width:1281px)
  .zcy
    section
      &.page1
        background-image: url(../img/zcy-scroll-img1_1440_900.png)
      &.page2
        background-image: url(../img/zcy-scroll-img2_1440_900.png)
      &.page3
        background-image: url(../img/zcy-scroll-img3_1440_900.png)
      &.page4
        background-image: url(../img/zcy-scroll-img4_1440_900.png)
  .index
    background-image: url(../img/index-background_1440_830.png)
      