.join_us
  padding-top: 45px
  > .content
      width: 810px
      float: left
      #corporate-culture-div
        .half
          position: relative
          .corporate-culture
            height: 330px
            background-image: url(../img/zcy-scroll-img1.png)
            background-size: cover
            .shade
              opacity: 0.95
              background-color: #FE5B45
              width: 100%
              height: 100%
              div
                position: relative
                float: left
                font-size: 22px
                top: 25%
                left: 10%
                color: white
                border: solid 1px white
                padding: 12px 16px
              img
                position: absolute
                float: right
        .grey-bg
          height: 180px
          padding: 30px
          background: #F8F8F8
          .left-1
            float: left
            font-size: 16px
            color: #24344E
            margin-left: 78px
            margin-top: 19px
            margin-right: 63px
      #happy-work-div
        padding-top: 97px
        padding-left: 75px
        min-width: 700px
        min-height: 320px
        background: #F8F8F8
        .title
          padding-bottom: 25px
          font-size: 18px
          color: #020B2D
        .content
          font-size: 16px
          color: #888888
      #team-building-div
        min-width: 850px
        .topical
          margin-bottom: 25px
          .title
            font-size: 18px
            color: #24344E
            margin-right: 14px
          .sub-title
            font-size: 12px
            color: #888888
            margin-right: 5px
      #office-environment-div
        min-width: 850px
        .topical
          margin-bottom: 15px
          .title
            font-size: 18px
            color: #24344E
            margin-bottom: 15px
          .description
            font-size: 12px
            color: #888888
      #recruitment-div
        .content
          margin-top: 42px
          .position
            width: 820px
            &:nth-child(odd)
              background: #F8F8F8
            .job-title
              height: 57px
              span
                line-height: 57px
              .category
                font-size: 16px
                color: #24344E
                margin-left: 28px
              .total-count
                text-align: right
              .toggle-icon
                text-align: right
            .job-list
              display: none
              border-top: solid 1px #F1F1F1
              padding-left: 33px
              padding-right: 59px
              padding-bottom: 22px
              .job-detail
                .job-name
                  padding-top: 22px
                  font-size: 16px
                  color: #24344E
                  margin-bottom: 13px
                .job-description
                  margin-bottom: 9px
                  .title
                    margin-bottom: 9px
                    font-size: 12px
                    color: #24344E
                  .detail
                    font-size: 10px
                    color: #888888
                .job-requirements
                  margin-bottom: 9px
                  .title
                    margin-bottom: 9px
                    font-size: 12px
                    color: #24344E
                  .detail
                    font-size: 10px
                    color: #888888
                .job-count
                  margin-bottom: 9px
                  .title
                    margin-bottom: 9px
                    font-size: 12px
                    color: #24344E
                  .detail
                    font-size: 10px
                    color: #888888
      #welfare-and-compensation-div
        padding-top: 42px
        padding-left: 50px
        padding-right: 80px
        padding-bottom: 40px
        min-width: 700px
        min-height: 320px
        background: #F8F8F8
        .sub-title
          padding-left: 10px
          font-size: 14px
        .title
          font-size: 16px
          color: #24344E
          display: inline-block
          img
            margin-right: 5px
          *
            float: left
        .content
          padding-top: 22px
          .detail
            padding-left: 25px
            padding-top: 18px
            padding-bottom: 18px
            font-size: 12px
            color: #888888








